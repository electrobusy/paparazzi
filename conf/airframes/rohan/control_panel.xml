<!-- [COMMENT] Rohan: My own control panel -->
<control_panel name="paparazzi control panel">
    <section name="programs"> <!-- Here we define all the programs/processes available in paparazzi -->
        <program name="Server" command="sw/ground_segment/tmtc/server"/>
        <program name="Data Link" command="sw/ground_segment/tmtc/link"/>
        <program name="GCS" command="sw/ground_segment/cockpit/gcs"/>
        <program name="Messages" command="sw/ground_segment/tmtc/messages"/>
        <program name="Settings" command="sw/ground_segment/tmtc/settings">
          <arg flag="-ac" constant="@AIRCRAFT"/>
        </program>
        <program name="Log Plotter" command="sw/logalizer/logplotter"/>
        <program name="Real-time Plotter" command="sw/logalizer/plotter"/>
        <program name="Log File Player" command="sw/logalizer/play"/>
        <program name="Simulator" command="sw/simulator/pprzsim-launch"/>
        <program name="Joystick" command="sw/ground_segment/joystick/input2ivy"/>
        <program name="Environment Simulator" command="sw/simulator/gaia"/>
        <program name="NatNet" command="sw/ground_segment/misc/natnet2ivy"/>
        <program name="Gazebo" command="sw/tools/gzclient_launcher.sh"/>
    </section>
    <section name="sessions"> <!-- Here we define all the sessions with previously included programs/processes -->
        <!-- Session - Simulation with Hobbyking joystick -->
        <session name="Simulation - Joystick">
            <program name="Simulator">
                <arg flag="-a" constant="@AIRCRAFT"/>
                <arg flag="-t" constant="nps"/>
            </program>
            <program name="Data Link">
                <arg flag="-d" constant="/dev/ttyUSB0"/>
                <arg flag="-udp"/>
                <!-- <arg flag="-ping_period" constant="100"/> --> 
            </program>
            <program name="Server">
                <arg flag="-n"/>
            </program>
            <program name="GCS">
                <arg flag="-maximize"/>
                <arg flag="-center_ac"/>
                <arg flag="-mercator"/>
                <arg flag="-maps_no_http"/>
                <arg flag="-track_size" constant="200"/>
                <arg flag="-zoom" constant="40."/>
            </program>
            <!-- 
            <program name="Messages">
                <arg flag="-g" constant="300x300-1000+600"/>
            </program> -->
            <program name="Joystick">
                <arg flag="-ac" constant="@AIRCRAFT"/>
                <arg flag="hobbyking.xml"/>
            </program>
            <program name="Real-time Plotter"> 
                <arg flag="-g" constant="750x250-0+0"/> <!-- "-g" flag specifies -->
                <arg flag="-t" constant="POSITION_ENU"/> <!-- "-t" flag gives a title -->
                <arg flag="-u" constant="0.05"/> <!-- "-u" flag updates the time -->
                <arg flag="-c" constant="0.00"/> <!-- first "-c" flag allows us to start the plot with given value, in this case, 0.00 -->
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:x_enu"/> <!-- "-c" flag also let's us choose the variable to plot -->
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:y_enu"/>
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:z_enu"/>
                <arg flag="-n"/> <!-- "-n" flag opens new window -->
                <arg flag="-g" constant="750x250-0+250"/>
                <arg flag="-t" constant="VELOCITY_ENU"/>
                <arg flag="-u" constant="0.05"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:vx_enu"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:vy_enu"/>
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:vz_enu"/>
                <arg flag="-n"/> <!-- "-n" flag opens new window -->
                <arg flag="-g" constant="750x250-800+0"/>
                <arg flag="-t" constant="THRUST"/>
                <arg flag="-u" constant="0.05"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:T_nn_pct"/> 
                <arg flag="-n"/> <!-- "-n" flag opens new window -->
                <arg flag="-g" constant="750x250-800+250"/>
                <arg flag="-t" constant="P-Q-R"/>
                <arg flag="-u" constant="0.05"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:p_nn"/>
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:q_nn"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:r_nn"/>  
                <arg flag="-n"/> <!-- "-n" flag opens new window -->
                <arg flag="-g" constant="750x250-0+500"/>
                <arg flag="-t" constant="ATTITUDE_PHI_ENU"/>
                <arg flag="-u" constant="0.05"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:phi_enu"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:phi_cmd"/>
                <arg flag="-n"/> <!-- "-n" flag opens new window -->
                <arg flag="-g" constant="750x250-800+500"/>
                <arg flag="-t" constant="ATTITUDE_THETA_ENU"/>
                <arg flag="-u" constant="0.05"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:theta_enu"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:theta_cmd"/>
                <arg flag="-n"/> <!-- "-n" flag opens new window -->
                <arg flag="-g" constant="750x250-0+750"/>
                <arg flag="-t" constant="ATTITUDE_PSI_ENU"/>
                <arg flag="-u" constant="0.05"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="0.00"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:psi_enu"/> 
                <arg flag="-c" constant="*:telemetry:GCNET_MAIN:psi_cmd"/>
            </program>
            <!--
            <program name="Settings">
                <arg flag="-ac" constant="@AIRCRAFT"/>
                <arg flag="-g" constant="800x200-1000+300"/>
            </program> -->
        </session>
        <!-- Session - Simulation with Gazebo and Hobbyking joystick -->
        <session name="Simulation - Gazebo + Joystick">
            <program name="Simulator">
                <arg flag="-a" constant="@AIRCRAFT"/>
                <arg flag="-t" constant="nps"/>
            </program>
            <program name="Data Link">
                <arg flag="-d" constant="/dev/ttyUSB0"/>
                <arg flag="-udp"/>
                <!-- <arg flag="-ping_period" constant="100"/> --> 
            </program>
            <program name="Server">
                <arg flag="-n"/>
            </program>
            <program name="GCS">
                <arg flag="-maximize"/>
                <arg flag="-center_ac"/>
                <arg flag="-mercator"/>
                <arg flag="-maps_no_http"/>
                <arg flag="-track_size" constant="200"/>
                <arg flag="-zoom" constant="40."/>
            </program>
            <!-- 
            <program name="Messages">
                <arg flag="-g" constant="300x300-1000+600"/>
            </program> -->
            <program name="Joystick">
                <arg flag="-ac" constant="@AIRCRAFT"/>
                <arg flag="hobbyking.xml"/>
            </program>
            <program name="Gazebo"/>
            <program name="Settings">
                <arg flag="-g" constant="800x200-1000+300"/>
            </program>
        </session>
        <!-- Session - Flight using a real drone -->
    </section>
</control_panel>